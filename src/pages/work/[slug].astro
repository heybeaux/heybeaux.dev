---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const projects = await getCollection('work');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<Layout title={`${project.data.name} — Beaux Walton`} description={project.data.challenge}>
  <article class="project-page">
    <!-- Back to work -->
    <a href="/#work" class="text-sm font-mono text-[var(--color-muted)] hover:text-[var(--color-accent)] mb-8 inline-block">
      ← Back to work
    </a>
    
    <!-- Header -->
    <header class="mb-8 pb-8 border-b border-[var(--color-border)]">
      <div class="flex flex-wrap items-center gap-3 mb-4">
        <h1 class="text-3xl md:text-4xl font-mono font-semibold leading-tight">
          {project.data.name}
        </h1>
        {project.data.status === 'active' && (
          <span class="tag">Active</span>
        )}
      </div>
      
      <div class="flex flex-wrap items-center gap-4 text-sm text-[var(--color-muted)] mb-4">
        <span class="font-mono">{project.data.role}</span>
        <span>·</span>
        <span class="font-mono">{project.data.period}</span>
        {project.data.externalLink && (
          <>
            <span>·</span>
            <a href={project.data.externalLink} target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 text-[var(--color-accent)] hover:underline">
              Visit Site
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
            </a>
          </>
        )}
      </div>
      
      {project.data.tech && project.data.tech.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {project.data.tech.map((t) => (
            <span class="text-xs font-mono text-[var(--color-muted)] bg-[var(--color-bg)] px-2 py-1 rounded border border-[var(--color-border)]">
              {t}
            </span>
          ))}
        </div>
      )}
    </header>
    
    <!-- Summary Cards -->
    <div class="grid gap-4 md:grid-cols-3 mb-8">
      <div class="card p-4">
        <h3 class="text-xs font-mono text-[var(--color-accent)] uppercase tracking-wider mb-2">Challenge</h3>
        <p class="text-sm text-[var(--color-muted)]">{project.data.challenge}</p>
      </div>
      <div class="card p-4">
        <h3 class="text-xs font-mono text-[var(--color-accent)] uppercase tracking-wider mb-2">Solution</h3>
        <p class="text-sm text-[var(--color-muted)]">{project.data.solution}</p>
      </div>
      <div class="card p-4">
        <h3 class="text-xs font-mono text-[var(--color-accent)] uppercase tracking-wider mb-2">Outcome</h3>
        <p class="text-sm text-[var(--color-muted)]">{project.data.outcome}</p>
      </div>
    </div>
    
    <!-- Content -->
    <div class="prose">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .project-page {
    max-width: 65ch;
    margin: 0 auto;
  }
  
  .prose {
    line-height: 1.8;
    font-size: 1.0625rem;
  }
  
  .prose :global(h2) {
    font-family: var(--font-mono);
    font-size: 1.375rem;
    font-weight: 600;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
    color: var(--color-text);
  }
  
  .prose :global(h3) {
    font-family: var(--font-mono);
    font-size: 1.125rem;
    font-weight: 600;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-text);
  }
  
  .prose :global(p) {
    margin-bottom: 1.25rem;
    color: var(--color-text);
  }
  
  .prose :global(a) {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 3px;
  }
  
  .prose :global(a:hover) {
    color: var(--color-text);
  }
  
  .prose :global(ul),
  .prose :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  
  .prose :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .prose :global(ul) {
    list-style-type: disc;
  }
  
  .prose :global(strong) {
    font-weight: 600;
  }
  
  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.875em;
    background: var(--color-bg);
    padding: 0.125rem 0.375rem;
    border-radius: 3px;
    border: 1px solid var(--color-border);
  }
</style>
